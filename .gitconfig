[user]
  name = Ege Avunc
  email =
[alias]
  a     = add
  d     = diff
  dc    = diff --cached
  s     = status -s
  st    = status
  cm    = commit
  br    = branch
  co    = checkout
  l     = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset  %p' --abbrev-commit --date=relative
  ld    = log --decorate
  ls    = log --decorate --pretty=short --abbrev-commit
  lo    = log --oneline --decorate
[core]
  editor = /usr/bin/vim
[push]
  default = simple
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  local = yellow
  remote = magenta
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
