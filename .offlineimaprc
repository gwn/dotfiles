[general]
accounts = personal,dev
ui = basic
pythonfile = ~/.offlineimap.py

[Account personal]
localrepository = personal-local
remoterepository = personal-remote

[Repository personal-local]
type = Maildir
localfolders = ~/mail/personal

[Repository personal-remote]
type = IMAP
remotehost = imap.gmail.com
remoteport = 993
remoteusereval = getpass('mail/personal', line=2)
remotepasseval = getpass('mail/personal', line=1)
ssl_version = tls1_2
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == 'INBOX'

[Account uservision]
localrepository = uservision-local
remoterepository = uservision-remote

[Repository uservision-local]
type = Maildir
localfolders = ~/mail/uservision

[Repository uservision-remote]
type = IMAP
remotehost = imappro.zoho.com
remoteport = 993
remoteusereval = getpass('mail/uservision', line=2)
remotepasseval = getpass('mail/uservision', line=1)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

