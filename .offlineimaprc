[general]
accounts = someaccount
ui = ttyui

[Account uservision]
localrepository = someaccount-local
remoterepository = someaccount-remote

[Repository someaccount-local]
type = Maildir
localfolders = ~/mail/someaccount

[Repository someaccount-remote]
type = IMAP
remotehost = imap.foo.com
remoteport = 993
remoteuser = bob@foo.com
remotepass = somecoolpassword
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
